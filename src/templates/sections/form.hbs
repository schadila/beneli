        </section>
        <section class="checkbox-section">
            <input type="checkbox" name="agb" id="agb" class="required"><label for="agb" class="description">[[form.agb]]</label>
            <br><input type="checkbox" name="newsletter_abo" id="newsletter_abo" value="1"><label for="newsletter_abo">[[form.newsletter]]</label>
        </section>
        <input type="hidden" name="language" value="[[index.locale]]">
        <input type="hidden" name="rezept" id="rezept">
        <br>
        <br>

        <button type="submit" class="submit sendForm" value=""><span class="button_handler"><!-- --></span>[[form.submit]]</button>
    </form>

</div>